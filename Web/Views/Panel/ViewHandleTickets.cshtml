@{
    ViewData["Title"] = "List Handle Tickets";
    Layout = "_PanelLayout";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Tickets</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Panel/">Panel</a></li>
                        <li class="breadcrumb-item active">Tickets</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">List Ticket</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tableViewHandleTickets" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Description</th>
                                        <th>StartDate Time</th>
                                        <th>EndDate Time</th>
                                        <th>Level</th>
                                        <th>User</th>
                                        <th>Priority Name</th>
                                        <th>Category Name</th>
                                        <th>Review</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<div id="viewConvertationModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cases</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="direct-chat-messages" id="chatMessages">
                    Chat
                </div>
                <form class="needs-validation" novalidate id="formCreateConvertation" action="javascript:createConvertation()">

                    <div class="form-row">
                        <input type="number" class="form-control" id="inputConvertationUserId" value="@ViewBag.UserId" hidden required>
                        <input type="number" class="form-control" id="inputConvertationCaseId" value="" hidden required>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label for="inputConvertationMessage">Message</label>
                            <textarea class="form-control" id="inputConvertationMessage" placeholder="Message" required></textarea>
                            <div class="invalid-feedback">
                                Please enter right string format.
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary">Send</button>
                </form>
            </div>

        </div>
    </div>
</div>
@section scripts {
    <script>
        var viewBagUserId = '@ViewBag.UserId';
        var viewBagRoleId = '@ViewBag.RoleId';
        var viewBagLevel = '@ViewBag.Level';
        var viewBagName = '@ViewBag.Name';
    </script>
    <script src="~/js/viewHandleTickets.js" asp-append-version="true"></script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>IT Support Helpdesk - Panel</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/adminlte/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/adminlte/css/adminlte.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/data-tables/jquery.dataTables.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/lib/adminlte/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/assets/img/icons/logo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/assets/img/icons/logo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">IT Support Helpdesk</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://localhost:44381/api/Users/Avatar/@ViewBag.UserId" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="/Panel/Profile" class="d-block">@ViewBag.Name</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="/Panel/" class="nav-link @if (ViewBag.CurrentPage == "PanelIndex") { Write("active"); }">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                            
                            @*@if (ViewBag.CurrentPage == "PanelIndex")
                            {
                                <a href="/Panel/" class="nav-link active">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>Dashboard</p>
                                </a>
                            }
                            else
                            {
                                <a href="/Panel/" class="nav-link active">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>Dashboard</p>
                                </a>
                            }*@

                        </li>
                        @if (ViewBag.Role == "Admin")
                        {
                            <li class="nav-item">
                                <a href="/panel/users" class="nav-link @if (ViewBag.CurrentPage == "Users") { Write("active"); }">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>Users</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/panel/cases" class="nav-link @if (ViewBag.CurrentPage == "Cases") { Write("active"); }">
                                    <i class="nav-icon fas fa-copy"></i>
                                    <p>Cases</p>
                                </a>

                            </li>
                            <li class="nav-item">
                                <a href="/panel/convertations" class="nav-link @if (ViewBag.CurrentPage == "Convertations") { Write("active"); }">
                                    <i class="nav-icon fas fa-chart-pie"></i>
                                    <p>Convertations</p>
                                </a>

                            </li>
                            <li class="nav-item">
                                <a href="/panel/histories" class="nav-link @if (ViewBag.CurrentPage == "Histories") { Write("active"); }">
                                    <i class="nav-icon fas fa-tree"></i>
                                    <p>
                                        Histories
                                    </p>
                                </a>

                            </li>
                            <li class="nav-header">Data</li>
                            <li class="nav-item">
                                <a href="/panel/categories" class="nav-link @if (ViewBag.CurrentPage == "Categories") { Write("active"); }">
                                    <i class="nav-icon fas fa-table"></i>
                                    <p>
                                        Categories
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="/panel/statuscodes" class="nav-link @if (ViewBag.CurrentPage == "StatusCodes") { Write("active"); }">
                                    <i class="nav-icon far fa-calendar-alt"></i>
                                    <p>
                                        StatusCodes
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/panel/priorities" class="nav-link @if (ViewBag.CurrentPage == "Priorities") { Write("active"); }">
                                    <i class="nav-icon far fa-calendar-alt"></i>
                                    <p>
                                        Priorities
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/panel/roles" class="nav-link @if (ViewBag.CurrentPage == "Roles") { Write("active"); }">
                                    <i class="nav-icon far fa-image"></i>
                                    <p>
                                        Roles
                                    </p>
                                </a>
                            </li>
                        }
                        else if (ViewBag.Role == "Software Developer" || ViewBag.Role == "IT Support" || ViewBag.Role == "Customer Service")
                        {
                            <li class="nav-header">Staffs</li>
                            <li class="nav-item">
                                <a href="/Panel/ViewHandleTickets" class="nav-link @if (ViewBag.CurrentPage == "ViewHandleTickets") { Write("active"); }">
                                    <i class="nav-icon fas fa-edit"></i>
                                    <p>
                                        View Handle Ticket
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Panel/ViewTickets" class="nav-link @if (ViewBag.CurrentPage == "ViewTickets") { Write("active"); }">
                                    <i class="nav-icon fas fa-columns"></i>
                                    <p>
                                        View Tickets
                                    </p>
                                </a>
                            </li>

                            @*<li class="nav-item">
                                    <a href="/Panel/ViewConvertations" class="nav-link">
                                        <i class="nav-icon fas fa-columns"></i>
                                        <p>
                                            View Convertations
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Panel/ViewAttachments" class="nav-link">
                                        <i class="nav-icon fas fa-columns"></i>
                                        <p>
                                            View Attachments
                                        </p>
                                    </a>
                                </li>*@
                        }
                        else
                        {
                            @*<li class="nav-header">Client</li>
                                <li class="nav-item">
                                    <a href="/Panel/CreateTicket" class="nav-link">
                                        <i class="nav-icon fas fa-edit"></i>
                                        <p>
                                            CreateTicket
                                        </p>
                                    </a>
                                </li>*@
                            <li class="nav-item">
                                <a href="/Panel/Tickets" class="nav-link @if (ViewBag.CurrentPage == "Tickets") { Write("active"); }">
                                    <i class="nav-icon fas fa-columns"></i>
                                    <p>
                                        Tickets
                                    </p>
                                </a>
                            </li>
                            @*<li class="nav-item">
                                    <a href="/Panel/ViewConvertations" class="nav-link">
                                        <i class="nav-icon fas fa-columns"></i>
                                        <p>
                                            View Convertations
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Panel/ViewAttachments" class="nav-link">
                                        <i class="nav-icon fas fa-columns"></i>
                                        <p>
                                            View Attachments
                                        </p>
                                    </a>
                                </li>*@
                        }
                        <li class="nav-item menu-open">
                            <a href="/Panel/Logout" class="nav-link">
                                <i class="nav-icon fas fa-door-alt"></i>
                                <p>Logout</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        @RenderBody()

        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.1.0
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/lib/adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/lib/adminlte/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/adminlte/plugins/datatables/jquery.dataTables.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/adminlte/js/adminlte.js"></script>
    <!-- Summernote -->
    <script src="~/lib/adminlte/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/lib/adminlte/js/pages/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
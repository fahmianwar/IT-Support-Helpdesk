@{
    ViewData["Title"] = "List StatusCodes";
    Layout = "_PanelLayout";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Status Codes</h1>
                    <span title="Create Status Code" data-toggle="tooltip" data-placement="right"><button type="button" class="btn btn-success" data-toggle="modal" data-target="#createModal"><i class="fas fa-edit"></i></button></span>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Panel/">Panel</a></li>
                        <li class="breadcrumb-item active">Status Codes</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">List Status Codes</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tableStatusCodes" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<div id="createModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create StatusCodes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="needs-validation" novalidate id="formCreate" action="javascript:insertStatusCode()">
                <div class="modal-body" id="modalCategory">
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="inputCreateName">Name</label>
                            <input type="text" class="form-control" id="inputCreateName" placeholder="Name" required>
                            <div class="invalid-feedback">
                                Please enter right string format.
                            </div>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="inputCreateEmail">Description</label>
                            <input type="text" class="form-control" id="inputCreateDescription" placeholder="Description" required>
                            <div class="invalid-feedback">
                                Please enter right format.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="editModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit StatusCodes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="needs-validation" novalidate id="formEdit" action="javascript:editStatusCode()">
                <div class="modal-body">
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <input type="text" hidden class="form-control" id="Id" placeholder="Id">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" placeholder="Name" required>
                            <div class="invalid-feedback">
                                Please enter right string format.
                            </div>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="Description">Description</label>
                            <input type="text" class="form-control" id="Description" placeholder="Description" required>
                            <div class="invalid-feedback">
                                Please enter right format.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/js/statuscodes.js" asp-append-version="true"></script>
}